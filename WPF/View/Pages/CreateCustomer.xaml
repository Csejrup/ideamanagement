<UserControl
      x:Class="EskobInnovation.IdeaManagement.WPF.View.Pages.CreateCustomer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EskobInnovation.IdeaManagement.WPF.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="500"
      >
    <StackPanel
            Background="WhiteSmoke">
        <Grid Height="450">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="250"/>
                <RowDefinition Height="20"/>
            </Grid.RowDefinitions>
            <Label
                Content="Create Customer"
                Grid.Column="1"
                Grid.Row="0"                
                VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center"
                FontSize="30"/>
            <!--DataGrid-->
            <DataGrid
                Name="CustomersDG"
                IsReadOnly="True"
                ItemsSource="{Binding Customers}"
                AutoGenerateColumns="False"
                Width="auto"
                Height="auto"
                CanUserReorderColumns="False" 
                Grid.Row="1">
                <DataGrid.Columns>
                    <DataGridTextColumn 
                        Header="Customer Id" 
                        Binding="{Binding Id}"
                        Width="auto"/>
                    <DataGridTextColumn 
                        Header="Customer Name" 
                        Binding="{Binding CompanyName}"
                        Width="auto"/>
                </DataGrid.Columns>
            </DataGrid>
            <!--Bottom Grid-->
            <Grid
                Grid.Column="1"
                Grid.Row="2" 
                Margin="0,0,0,-130"
                Background="AliceBlue">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <!--Update Customer Grid-->
                <Grid Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Border 
                            Grid.Column="0" 
                            BorderBrush="Black"
                            BorderThickness="1" 
                            Grid.ColumnSpan="2">
                        <!--Grid Row 2 Create and Create Account section-->
                        <StackPanel 
                                    Margin="-1,-1,-1,-1" 
                                    Background="DimGray">
                            <Label 
                                    Content="Create Customer"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="15"
                                   FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    <Label 
                            Grid.Row="1" 
                           Grid.Column="0" 
                           Content="Customer Name"/>
                    <TextBox 
                            Grid.Row="1" 
                             Grid.Column="1" 
                             Text="{Binding CompanyName}"/>
                    <Button 
                        Grid.Row="4" 
                            Grid.ColumnSpan="2" 
                            Content="Create Customer"
                            Margin="2"
                            Command="{Binding AddCustomerCmd}"/>
                </Grid>
                <!--Create Account Grid-->
                <Grid Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Border Grid.Column="0" BorderBrush="Black"
                                BorderThickness="1" Grid.ColumnSpan="2">
                        <StackPanel Margin="-1,-1,-1,-1" Background="DimGray">
                            <Label Content="Create Account"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   FontSize="15"
                                   FontWeight="Bold"/>
                        </StackPanel>
                    </Border>
                    <Label Grid.Row="1" Grid.Column="0" Content="Insert Customer ID"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Id, UpdateSourceTrigger=PropertyChanged}" />
                    <Label Grid.Row="2" Grid.Column="0" Content="Insert Email"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />
                    <Label Grid.Row="3" Grid.Column="0" Content="Insert Password"/>
                    <TextBox  Grid.Row="3" Grid.Column="1" Text="{Binding Password, UpdateSourceTrigger=PropertyChanged }" />
                    <Button Grid.Row="4" Grid.ColumnSpan="2" Content="Create Account"
                            Command="{Binding CreateAccountCmd}" Margin="2">
                    </Button>
                </Grid>
            </Grid>
        </Grid>
    </StackPanel>
</UserControl>
