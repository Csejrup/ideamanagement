<UserControl
      x:Class="EskobInnovation.IdeaManagement.WPF.View.Pages.AddCustomer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EskobInnovation.IdeaManagement.WPF.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      >

    <Grid>
        <TextBlock
            FontSize="30" 
            Text="This is Add Customer" 
            HorizontalAlignment="Left" 
            VerticalAlignment="Top" Margin="245,29,0,0"/>
        <TextBox 
            x:Name="NameTxt" 
            HorizontalAlignment="Left" 
            Margin="223,137,0,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Width="120"
            Text="{Binding CompanyName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <Button 
            x:Name="addCustomerBtn" 
            Content="Add" 
            HorizontalAlignment="Left" 
            Margin="223,183,0,0" 
            VerticalAlignment="Top" 
            Width="120"
            Command="{Binding AddCustomerCmd}"/>
    </Grid>
</UserControl>
